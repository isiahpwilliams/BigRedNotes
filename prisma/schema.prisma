generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Course {
  id           Int    @id @default(autoincrement())
  subjectCode  String
  courseNumber String
  name         String?
  notes        Note[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([subjectCode, courseNumber])
}

model Note {
  id        Int      @id @default(autoincrement())
  name      String
  fileUrl   String
  courseId  Int
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Professor {
  id       Int      @id @default(autoincrement())
  name     String
  reviews  Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id          Int       @id @default(autoincrement())
  professorId Int
  professor   Professor @relation(fields: [professorId], references: [id], onDelete: Cascade)
  rating      Int
  comment     String?
  courseTag   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
